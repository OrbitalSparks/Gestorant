<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96EAF4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Label_nventario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Principal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <ScrollView
        android:layout_width="355dp"
        android:layout_height="284dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonAgregarProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Producto" />

            <Button
                android:id="@+id/buttonAgregarEmpleado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Empleado" />

            <Button
                android:id="@+id/buttonverProducto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver productos" />

            <Button
                android:id="@+id/buttonListaempleados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lista empleados" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imagen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>